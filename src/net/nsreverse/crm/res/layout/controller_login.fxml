<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="titledPane" collapsible="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="150.0" minWidth="300.0" text="CRM Login" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.nsreverse.crm.java.view.LoginController">
    <content>
        <VBox spacing="10.0">
            <children>
                <TextField fx:id="usernameTextField" promptText="(Username)" />
                <PasswordField fx:id="passwordTextField" promptText="(Password)" />
                <BorderPane>
                    <right>
                        <HBox prefHeight="25.0" spacing="10.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#loginButtonPressed" text="Login" />
                                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonPressed" text="Cancel" />
                            </children>
                        </HBox>
                    </right>
               <left>
                  <ProgressIndicator fx:id="loginIndicator" maxHeight="25.0" maxWidth="25.0" minWidth="35.0" visible="false" BorderPane.alignment="CENTER" />
               </left>
                </BorderPane>
            </children></VBox>
    </content>
</TitledPane>
