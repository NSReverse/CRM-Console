<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="titlePane" collapsible="false" maxHeight="500.0" maxWidth="300.0" minHeight="500.0" minWidth="350.0" prefHeight="500.0" prefWidth="350.0" text="Add Interaction/Alert" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.nsreverse.crm.java.view.interactions_alerts.AddInteractionController">
    <content>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <TextArea fx:id="ticketDetailsTextArea" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                <BorderPane>
                    <right>
                        <HBox spacing="10.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="submitButton" defaultButton="true" mnemonicParsing="false" onAction="#submitButtonPressed" text="Submit" />
                                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonPressed" text="Cancel" />
                            </children>
                            <padding>
                                <Insets left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                    </right>
                </BorderPane>

            </children>
        </VBox>
    </content>
</TitledPane>
